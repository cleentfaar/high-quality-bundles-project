<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                       https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Traditional\Core\Model\User" table="traditional_user" repository-class="Traditional\Infrastructure\Persistence\DoctrineORM\UserRepository">
        <id name="id" type="string" column="id"><generator strategy="NONE"/></id>
        <field name="email" type="email"/>
        <field name="password"/>
        <field name="country"/>
        <one-to-many target-entity="Traditional\Core\Model\UserPhoneNumber" mapped-by="user" field="phoneNumbers" orphan-removal="true">
            <cascade><cascade-persist/><cascade-remove/></cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>